@using FiorelloProject.Models;

@model List<Category>

@{
    int no = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Category Table</h4>
                        <a asp-action="Create" class="btn btn-success">Create Category</a>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        @*  <th>
                                        Product count
                                        </th>*@
                                        <th>
                                            Settings
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Category category in Model)
                                    {
                                        no++;
                                        <tr>
                                            <td class="py-1">
                                                @no
                                            </td>
                                            <td>
                                                <p>@category.Name</p>
                                            </td>
                                            @* <td>
                                        <p>@category.Products.Count</p>
                                        </td>*@
                                            <td>
                                                <a class="btn btn-warning btn-info" asp-action="Update" asp-route-id="@category.Id"><i class="mdi mdi-grease-pencil"></i></a>
                                                <a class="btn btn-danger btn-info" asp-action="Delete" asp-route-id="@category.Id"><i class="mdi mdi-delete"></i></a>
                                                <a class="btn btn-primary"><i class="mdi mdi-email-open"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
